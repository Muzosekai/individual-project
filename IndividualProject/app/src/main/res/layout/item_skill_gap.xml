<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="skillGapItem"
            type="com.example.individualproject.SkillGapItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textViewSkillNeeded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{skillGapItem.skillNeeded}"
            tools:text="Advanced SQL"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewSkillReasoning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{skillGapItem.reasoning}"
            tools:text="Essential for complex data querying and database management in data-centric roles."
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
    </LinearLayout>
</layout>